@{
    List<Object> menuItems = new List<Object>();

    
    menuItems.Add(new
    {
        text = "Dashboard",
        url = "/",
        iconCss = "fa-solid fa-box",
    });
    menuItems.Add(new
    {
        text = "Categorie",
        url = "/Category",
        iconCss = "fa-solid fa-folder-closed",
    });
    menuItems.Add(new
    {
        text = "Transazioni",
        iconCss = "fa-solid fa-arrow-right-arrow-left",
        url = "/Transaction"
    });

     menuItems.Add(new
    {
        text = "Impostazioni",
        iconCss = "fa-solid fa-gear",
        url = "/Settings"
    });
}


<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px"
            target=".dock-target" enableGestures="false">
    <e-content-template>

        <div class="logo-wrapper">
            <div class="app-logo">
                <i class="fa-solid fa-chart-simple fa-2xl" style="color: #65DA41;"> <p class="ms-4"> iTracker</p> </i>
               
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>

        <div class="profile-wrapper">
            <img class="profile-pic" src="./profile2.jpg" />
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mb-0">Portafoglio</h6>
                <span class="text-muted">Cristian Fasano</span>
            </div>
        </div>
        
        <ejs-menu id="menu"
                  items="menuItems"
                  orientation="Vertical"
                  hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<script>
    document.addEventListener('DOMContentLoaded',function (){
        dockBar = document.getElementById('sidebar').ej2_instances[0];
        document.getElementById('sidebar-toggler').onclick = function () {
            dockBar.toggle();
        };
    });

</script>
